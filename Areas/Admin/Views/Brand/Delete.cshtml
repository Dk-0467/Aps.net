@model buiduckiem_aps.net.Context.Brand

@{
    ViewBag.Title = "Xóa thương hiệu";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <!-- Hiển thị thông báo lỗi nếu có -->
    @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
    {
        <div class="alert alert-danger">
            @ViewBag.ErrorMessage
        </div>
    }

    <div class="card shadow">
        <div class="card-header bg-danger text-white">
            <h3>Xác nhận xóa thương hiệu</h3>
        </div>
        <div class="card-body">
            <h5>Bạn có chắc chắn muốn xóa thương hiệu sau không?</h5>
            <dl class="row">
                <dt class="col-sm-4">Tên thương hiệu</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Name)</dd>

                <dt class="col-sm-4">Hình đại diện</dt>
                <dd class="col-sm-8">
                    <img src="~/Content/images/items/@Model.Avatar" alt="@Model.Name" class="img-thumbnail" style="max-width: 150px;" />
                </dd>

                <dt class="col-sm-4">Slug</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Slug)</dd>

                <dt class="col-sm-4">Hiển thị trang chủ</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.ShowOnHomePage)</dd>

                <dt class="col-sm-4">Thứ tự hiển thị</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.DisplayOrder)</dd>

                <dt class="col-sm-4">Ngày tạo</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.CreatedOnUtc)</dd>

                <dt class="col-sm-4">Ngày cập nhật</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.UpdatedOnUtc)</dd>
            </dl>
            <p class="text-danger"><strong>Lưu ý:</strong> Thao tác này không thể hoàn tác.</p>
        </div>
        <div class="card-footer">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <input type="submit" value="Xóa" class="btn btn-danger" />
                <a href="@Url.Action("Index", "Brand")" class="btn btn-secondary">Hủy</a>
            }
        </div>
    </div>
</div>
