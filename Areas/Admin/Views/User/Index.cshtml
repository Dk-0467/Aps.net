@using PagedList;
@using PagedList.Mvc;
@model PagedList.PagedList<buiduckiem_aps.net.Context.User>

@{
    ViewBag.Title = "Danh sách người dùng";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary">Danh sách người dùng</h2>
        <a href="@Url.Action("Create")" class="btn btn-success">
            <i class="fas fa-plus-circle"></i> Thêm mới
        </a>
    </div>

    <!-- Tìm kiếm -->
    @using (Html.BeginForm("Index", "User", FormMethod.Get))
    {
        <p>
            @Html.TextBox("SearchString", ViewBag.CurrentFilter as string, new { @class = "form-control", placeholder = "Tìm kiếm..." })
            <input type="submit" value="Tìm kiếm" class="btn btn-primary mt-2" />
        </p>
    }

    <!-- Bảng hiển thị dữ liệu -->
    <table class="table table-hover table-bordered">
        <thead class="table-light">
            <tr>
                <th>Họ</th>
                <th>Tên</th>
                <th>Email</th>
                <th>Mật khẩu</th>
                <th>Quản trị viên</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.FirstName</td>
                    <td>@item.LastName</td>
                    <td>@item.Email</td>
                    <td>********</td> <!-- Ẩn mật khẩu -->
                    <td>
                        @if (item.IsAdmin.HasValue && item.IsAdmin.Value)
                        {
                            <span class="badge bg-success">Quản trị viên</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Người dùng</span>
                        }
                    </td>
                    <td>
                        <div class="d-flex gap-2">
                            <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-sm btn-warning">
                                <i class="fas fa-edit"></i> Sửa
                            </a>
                            <a href="@Url.Action("Details", new { id = item.Id })" class="btn btn-sm btn-info text-white">
                                <i class="fas fa-info-circle"></i> Chi tiết
                            </a>
                            <a href="@Url.Action("Delete", new { id = item.Id })" class="btn btn-sm btn-danger" onclick="return confirm('Bạn có chắc chắn muốn xóa người dùng này?');">
                                <i class="fas fa-trash-alt"></i> Xóa
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Hiển thị phân trang -->
    <div class="d-flex justify-content-between align-items-center mt-4">
        <div>
            Trang @(Model.PageCount > 0 ? Model.PageNumber : 0) / @Model.PageCount
        </div>
        <div>
            @Html.PagedListPager(Model, page => Url.Action("Index", new { page, currentFilter = ViewBag.CurrentFilter }))
        </div>
    </div>
</div>

<!-- Include FontAwesome for icons -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
