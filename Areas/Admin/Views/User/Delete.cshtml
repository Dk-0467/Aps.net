@model buiduckiem_aps.net.Context.User

@{
    ViewBag.Title = "Xóa người dùng";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <!-- Hiển thị thông báo lỗi nếu có -->
    @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
    {
        <div class="alert alert-danger">
            @ViewBag.ErrorMessage
        </div>
    }

    <div class="card shadow">
        <div class="card-header bg-danger text-white">
            <h3>Xác nhận xóa người dùng</h3>
        </div>
        <div class="card-body">
            <h5>Bạn có chắc chắn muốn xóa người dùng sau không?</h5>
            <dl class="row">
                <dt class="col-sm-4">Họ</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.FirstName)</dd>

                <dt class="col-sm-4">Tên</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.LastName)</dd>

                <dt class="col-sm-4">Email</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Email)</dd>

                <dt class="col-sm-4">Quyền Admin</dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.IsAdmin, new { @class = "badge badge-info" })
                </dd>
            </dl>
            <p class="text-danger"><strong>Lưu ý:</strong> Thao tác này không thể hoàn tác. Hãy kiểm tra kỹ trước khi tiếp tục.</p>
        </div>
        <div class="card-footer">
            <!-- Form xác nhận xóa -->
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <input type="submit" value="Xóa" class="btn btn-danger" />
                <a href="@Url.Action("Index", "User")" class="btn btn-secondary">Hủy</a>
            }
        </div>
    </div>
</div>
