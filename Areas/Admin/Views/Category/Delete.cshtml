@model buiduckiem_aps.net.Context.Category

@{
    ViewBag.Title = "Xóa danh mục";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <!-- Hiển thị thông báo lỗi nếu có -->
    @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
    {
        <div class="alert alert-danger">
            @ViewBag.ErrorMessage
        </div>
    }

    <div class="card shadow">
        <div class="card-header bg-danger text-white">
            <h3>Xác nhận xóa danh mục</h3>
        </div>
        <div class="card-body">
            <h5>Bạn có chắc chắn muốn xóa danh mục sau không?</h5>
            <dl class="row">
                <dt class="col-sm-4">Tên danh mục</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Name)</dd>

                <dt class="col-sm-4">Slug</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Slug)</dd>

                <dt class="col-sm-4">Ngày tạo</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.CreatedOnUtc)</dd>

                <dt class="col-sm-4">Ngày cập nhật</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.UpdatedOnUtc)</dd>
            </dl>
            <p class="text-danger"><strong>Lưu ý:</strong> Thao tác này không thể hoàn tác.</p>
        </div>
        <div class="card-footer">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <input type="submit" value="Xóa" class="btn btn-danger" />
                <a href="@Url.Action("Index", "Category")" class="btn btn-secondary">Hủy</a>
            }
        </div>
    </div>
</div>
