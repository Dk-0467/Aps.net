@model buiduckiem_aps.net.Context.Category

@{
    ViewBag.Title = "Chi tiết danh mục";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Chi tiết danh mục</h2>

    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Thông tin danh mục</h5>
        </div>
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-md-3 font-weight-bold">Tên danh mục:</div>
                <div class="col-md-9">@Html.DisplayFor(model => model.Name)</div>
            </div>

            <div class="row mb-3">
                <div class="col-md-3 font-weight-bold">Ảnh đại diện:</div>
                <div class="col-md-9">
                        @if (!string.IsNullOrEmpty(Model.Avatar))
                        {
                            <img src="@Url.Content("~/Content/images/items/" + Model.Avatar)" alt="@Model.Name"
                                 style="width: 100px; height: 100px; object-fit: cover; border-radius: 5px;">
                        }
                        else
                        {
                            <span>Không có hình</span>
                        }
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-3 font-weight-bold">Slug:</div>
                <div class="col-md-9">@Html.DisplayFor(model => model.Slug)</div>
            </div>

            <div class="row mb-3">
                <div class="col-md-3 font-weight-bold">Thứ tự hiển thị:</div>
                <div class="col-md-9">@Html.DisplayFor(model => model.DisplayOrder)</div>
            </div>


        </div>
    </div>

    <div class="text-center mt-4">
        @Html.ActionLink("Sửa", "Edit", new { id = Model.Id }, new { @class = "btn btn-warning mr-2" })
        @Html.ActionLink("Trở lại danh sách", "Index", null, new { @class = "btn btn-secondary" })
    </div>
</div>
